<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".Activity_semi">

    <ScrollView
        style="@android:style/Widget.Holo.ScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btnFibL"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:background="@layout/bordeslayout"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/btn_fibonacci"
                    app:civ_border_color="#043605"
                    app:civ_border_width="5dp" />

                <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="200dp"
                        android:layout_height="22dp"
                        android:text="Fibonacci" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="200dp"
                        android:layout_height="80dp"
                        android:textSize="11dp"
                        android:text="La sucesión comienza con los números 0 y 1,2​ y a partir de estos, cada término es la suma de los dos anteriores." />
                </LinearLayout>

                <Button
                    android:id="@+id/btnFib"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/simbolo01"
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnPrimosL"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:background="@layout/bordeslayout"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/btn_primos"
                    app:civ_border_color="#043605"
                    app:civ_border_width="5dp" />

                <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="200dp"
                        android:layout_height="22dp"
                        android:text="Numeros Primos" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="Un número primo es un número entero mayor que cero, que tiene exactamente dos divisores positivos. " />
                </LinearLayout>

                <Button
                    android:id="@+id/btnPrimos"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/simbolo01"
                     />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnFacL"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:background="@layout/bordeslayout"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/btn_factorial"
                    app:civ_border_color="#043605"
                    app:civ_border_width="5dp" />

                <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="200dp"
                        android:layout_height="22dp"
                        android:text="Factorial" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9dp"
                        android:text="Se representa con un signo de exclamación “!” detrás de un número. Quiere decir que hay que multiplicar todos los números enteros positivos que hay entre ese número y el 1." />
                </LinearLayout>

                <Button
                    android:id="@+id/btnFac"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/simbolo01"
                     />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnMulL"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:background="@layout/bordeslayout"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/btn_multiplos"
                    app:civ_border_color="#043605"
                    app:civ_border_width="5dp" />

                <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="200dp"
                        android:layout_height="22dp"
                        android:text="Multiplos" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="Los múltiplos de un número son todos aquellos números enteros que se obtienen de multiplicar un  número entero por cualquier otro número entero natural." />
                </LinearLayout>

                <Button
                    android:id="@+id/btnMul"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/simbolo01"
                     />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnModL"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:background="@layout/bordeslayout"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/btn_modulo"
                    app:civ_border_color="#043605"
                    app:civ_border_width="5dp" />

                <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="200dp"
                        android:layout_height="22dp"
                        android:text="Modulo" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Es el residuo de una division de X y Y." />

                </LinearLayout>

                <Button
                    android:id="@+id/btnMod"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/simbolo01"
                     />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnExpL"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:background="@layout/bordeslayout"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/btn_exponencial"
                    app:civ_border_color="#043605"
                    app:civ_border_width="5dp" />

                <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="200dp"
                        android:layout_height="22dp"
                        android:text="Exponecial" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="es una función de la forma. f(x)=ab^ en el que el argumento ^ se presenta como un exponente. " />
                </LinearLayout>

                <Button
                    android:id="@+id/btnExp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/simbolo01"
                     />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnCriL"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:background="@layout/bordeslayout"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img7"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/btn_criberas"
                    app:civ_border_color="#043605"
                    app:civ_border_width="5dp" />

                <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="220dp"
                        android:layout_height="22dp"
                        android:text="Criba de Esrastostenes" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="es un algoritmo que permite hallar todos los números primos menores que un número natural dado n." />

                </LinearLayout>

                <Button
                    android:id="@+id/btnCri"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/simbolo01"
                     />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnMcdL"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:background="@layout/bordeslayout"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img8"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/btn_maxcdmcm"
                    app:civ_border_color="#043605"
                    app:civ_border_width="5dp" />

                <LinearLayout
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:text="Max. Comun Multiplo y Divisor" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="MCM Es el número más pequeño, que no sea cero, que es múltiplo de dos o más números.
MCD Es el mayor número que divide exactamente a dos o más números." />

                </LinearLayout>

                <Button
                    android:id="@+id/btnMcd"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/simbolo01"
                     />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>